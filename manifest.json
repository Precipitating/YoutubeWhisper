{
  "description": "Utilizes whisper to transcribe videos",
  "manifest_version": 2,
  "name": "YoutubeWhisper",
  "version": "1.0",
  "browser_action": {
    "default_popup": "src/app.html"
  },
  "permissions": [
    "storage"
  ],

  "web_accessible_resources": ["src/audiopreprocessor.js"],

  "background": {
    "scripts": ["build/background.js"],
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["build/content.js"]
    }
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval' 'wasm-unsafe-eval'; worker-src 'self' blob:; object-src 'self'"
}
